{
  "name": "mcp-hello-world-server",
  "version": "1.0.0",
  "type": "module",
  "description": "A minimal MCP server demonstrating tools, resources, and prompts (updated for rules-style tooling)",
  "main": "build/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node build/index.js",
    "start:http": "TRANSPORT=http npm start",
    "start:stdio": "TRANSPORT=stdio npm start",
    "clean": "rm -rf build",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "inspect": "npm run build && npx @modelcontextprotocol/inspector node build/index.js",
    "inspector:dev": "npx @modelcontextprotocol/inspector tsx src/index.ts",
    "inspector:sse": "npx @modelcontextprotocol/inspector http://localhost:3001/sse",
    "inspector:http": "npx @modelcontextprotocol/inspector http://localhost:3001/mcp",
    "inspector:cli": "npm run build && npx @modelcontextprotocol/inspector --cli node build/index.js",
    "inspector:cli:tools": "npm run build && npx @modelcontextprotocol/inspector --cli node build/index.js --method tools/list",
    "docker:build": "./scripts/build.sh",
    "docker:run": "./scripts/run.sh",
    "docker:logs": "./scripts/logs.sh",
    "docker:stop": "./scripts/stop.sh",
    "docker:dev": "./scripts/dev.sh"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.4",
    "express": "5.1.0",
    "body-parser": "^2.2.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1"
  },
  "devDependencies": {
    "@modelcontextprotocol/inspector": "^0.16.5",
    "@types/cors": "^2.8.19",
    "@types/express": "5.0.3",
    "@types/node": "24.3.0",
    "@typescript-eslint/eslint-plugin": "8.40.0",
    "@typescript-eslint/parser": "8.40.0",
    "@vitest/coverage-v8": "3.2.4",
    "eslint": "9.34.0",
    "prettier": "3.6.2",
    "tsx": "4.20.5",
    "typescript": "5.9.2",
    "vitest": "3.2.4"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
